<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chocolate"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/txt_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.50"
        android:textSize="22sp"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/txt_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chocolate without sugar"
        android:textSize="18sp"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_add"
        android:src="@android:drawable/ic_menu_add"
        android:layout_above="@+id/view"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/txt_value"
        android:layout_toStartOf="@+id/txt_value"
        android:layout_marginLeft="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_remove"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_alignTop="@+id/img_add"
        android:layout_toLeftOf="@+id/img_add"
        android:layout_toStartOf="@+id/img_add" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_name"
        android:layout_toEndOf="@+id/txt_name"
        android:gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="quantity"
            android:id="@+id/textView_quantity"
            android:layout_alignBottom="@+id/txt_name"
            android:layout_toRightOf="@+id/txt_name"
            android:layout_toEndOf="@+id/txt_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/txt_quantity"
            android:textSize="22dp"
            android:layout_alignBottom="@+id/textView_quantity"
            android:layout_toRightOf="@+id/textView_quantity"
            android:layout_toEndOf="@+id/textView_quantity" />
    </LinearLayout>

</RelativeLayout>